{
  "kind": "collectionType",
  "collectionName": "appquotes",
  "info": {
    "singularName": "appquote",
    "pluralName": "appquotes",
    "displayName": "App Quotes",
    "description": "This collection represents quotes within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "QuoteText": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "Author": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "Date": {
      "type": "datetime",
      "required": true
    },
    "LinkedAppannouncements": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appannouncement.appannouncement",
      "inversedBy": "LinkedQuotes"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
