{
  "kind": "collectionType",
  "collectionName": "appaudios",
  "info": {
    "singularName": "appaudio",
    "pluralName": "appaudios",
    "displayName": "App Audio",
    "description": "This collection represents audio files within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "AudioTitle": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "AudioDescription": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "IsPrivate": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "LinkedTopics": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::apptopic.apptopic",
      "inversedBy": "appaudios"
    },
    "Duration": {
      "type": "string",
      "required": true,
      "pattern": "^\\d+:[0-5]?\\d$",
      "default": "1:00"
    },
    "AudioURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "IsPopular": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "Color": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "default": 0
    },
    "LinkedCollections": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appcollection.appcollection",
      "inversedBy": "appaudios"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
