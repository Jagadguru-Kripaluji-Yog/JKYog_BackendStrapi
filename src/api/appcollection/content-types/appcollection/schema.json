{
  "kind": "collectionType",
  "collectionName": "appcollections",
  "info": {
    "singularName": "appcollection",
    "pluralName": "appcollections",
    "displayName": "App Collections",
    "description": "This collection represents collections of various content types within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "CollectionTitle": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "maxLength": 256
    },
    "IsPrivate": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "LinkedTopics": {
      "type": "relation",
      "required": true,
      "relation": "manyToMany",
      "target": "api::apptopic.apptopic",
      "inversedBy": "LinkedCollections"
    },
    "CollectionContent": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "Color": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "IsPopular": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "LinkedVideos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appvideo.appvideo",
      "mappedBy": "LinkedCollections"
    },
    "LinkedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::apparticle.apparticle",
      "mappedBy": "LinkedCollections"
    },
    "LinkedAudios": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appaudio.appaudio",
      "mappedBy": "LinkedCollections"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
