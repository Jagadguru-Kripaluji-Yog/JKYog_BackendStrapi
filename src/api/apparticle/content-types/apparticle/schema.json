{
  "kind": "collectionType",
  "collectionName": "apparticles",
  "info": {
    "singularName": "apparticle",
    "pluralName": "apparticles",
    "displayName": "App Articles",
    "description": "This collection represents articles within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "ArticleTitle": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "LinkedCollections": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appcollection.appcollection",
      "inversedBy": "LinkedArticles"
    },
    "LinkedTopics": {
      "type": "relation",
      "required": true,
      "relation": "oneToMany",
      "target": "api::apptopic.apptopic",
      "inversedBy": "LinkedArticles"
    },
    "LinkedCourses": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appcourse.appcourse",
      "inversedBy": "LinkedArticles"
    },
    "IsPrivate": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "ReadingTime": {
      "type": "integer",
      "required": true,
      "default": 2,
      "min": 1
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "Content": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
