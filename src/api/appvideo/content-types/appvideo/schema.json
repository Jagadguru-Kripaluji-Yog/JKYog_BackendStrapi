{
  "kind": "collectionType",
  "collectionName": "appvideos",
  "info": {
    "singularName": "appvideo",
    "pluralName": "appvideos",
    "displayName": "App Videos",
    "description": "This collection represents videos within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "VideoTitle": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "VideoDescription": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "VideoURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "LinkedCollections": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appcollection.appcollection",
      "inversedBy": "LinkedVideos"
    },
    "LinkedCourses": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appcourse.appcourse",
      "inversedBy": "LinkedVideos"
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "IsPrivate": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "IsPopular": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "Duration": {
      "type": "string",
      "required": true,
      "pattern": "^\\d+:[0-5]?\\d$",
      "default": "10:00"
    },
    "LinkedTopics": {
      "type": "relation",
      "required": true,
      "relation": "manyToMany",
      "target": "api::apptopic.apptopic",
      "inversedBy": "LinkedVideos"
    },
    "LinkedAppannouncements": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::appannouncement.appannouncement",
      "inversedBy": "LinkedVideos"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
