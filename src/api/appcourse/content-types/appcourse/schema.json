{
  "kind": "collectionType",
  "collectionName": "appcourses",
  "info": {
    "singularName": "appcourse",
    "pluralName": "appcourses",
    "displayName": "App Courses",
    "description": "This collection represents courses within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "CourseTitle": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "IsPrivate": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "LinkedTopics": {
      "type": "relation",
      "required": true,
      "relation": "oneToMany",
      "target": "api::apptopic.apptopic",
      "inversedBy": "LinkedCourses"
    },
    "CourseContent": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "Color": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "default": 1
    },
    "IsPopular": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "LinkedVideos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appvideo.appvideo",
      "mappedBy": "LinkedCourses"
    },
    "LinkedAudios": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appaudio.appaudio",
      "mappedBy": "LinkedCourses"
    },
    "CourseURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "LinkedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::apparticle.apparticle",
      "mappedBy": "LinkedCourses"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
