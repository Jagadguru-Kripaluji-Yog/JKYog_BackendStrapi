{
  "kind": "collectionType",
  "collectionName": "appbooks",
  "info": {
    "singularName": "appbook",
    "pluralName": "appbooks",
    "displayName": "App Books",
    "description": "This collection represents books within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "BookTitle": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "IsPrivate": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "WebsiteURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "Color": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "default": 1
    },
    "IsPopular": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "LinkedTopics": {
      "type": "relation",
      "required": true,
      "relation": "manyToMany",
      "target": "api::apptopic.apptopic",
      "inversedBy": "LinkedBooks"
    },
    "BookDescription": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
