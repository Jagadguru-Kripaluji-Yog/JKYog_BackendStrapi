{
  "kind": "collectionType",
  "collectionName": "appevents",
  "info": {
    "singularName": "appevent",
    "pluralName": "appevents",
    "displayName": "App Events",
    "description": "This collection represents events within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "EventTitle": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "maxLength": 100
    },
    "EventSubtitle": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 1
    },
    "EventDescription": {
      "type": "customField",
      "required": true,
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "StartTime": {
      "type": "datetime",
      "required": true
    },
    "EndTime": {
      "type": "datetime"
    },
    "ImageURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "WebsiteURL": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    },
    "EventLocation": {
      "type": "enumeration",
      "required": true,
      "default": "Online",
      "enum": ["Online", "Offline", "Both"]
    }
  }
}
