{
  "kind": "collectionType",
  "collectionName": "apptopics",
  "info": {
    "singularName": "apptopic",
    "pluralName": "apptopics",
    "displayName": "App Topics",
    "description": "This collection represents topics within the app."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "TopicTitle": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "maxLength": 256
    },
    "ImagePath": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "pattern": "https?://.+"
    },
    "LinkedBooks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::appbook.appbook",
      "mappedBy": "LinkedTopics"
    },
    "LinkedAudios": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::appaudio.appaudio",
      "mappedBy": "LinkedTopics"
    },
    "LinkedCollections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::appcollection.appcollection",
      "mappedBy": "LinkedTopics"
    },
    "LinkedCourses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::appcourse.appcourse",
      "mappedBy": "LinkedTopics"
    },
    "LinkedVideos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::appvideo.appvideo",
      "mappedBy": "LinkedTopics"
    },
    "LinkedArticles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::apparticle.apparticle",
      "mappedBy": "LinkedTopics"
    },
    "Language": {
      "type": "enumeration",
      "required": true,
      "default": "en",
      "enum": ["en", "hi"]
    }
  }
}
